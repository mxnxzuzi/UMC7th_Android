<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/restaurant_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/restaurant_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="음식점 이름"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/restaurant_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/restaurant_description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="음식 설명"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/restaurant_image_view"
        app:layout_constraintTop_toBottomOf="@id/restaurant_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/delivery_time_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="배달 시간"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/restaurant_image_view"
        app:layout_constraintTop_toBottomOf="@id/restaurant_description_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
